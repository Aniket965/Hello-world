import math
print("Somar (+)\nSubtrair (-)\nDividir (/)\nMultiplicar (*)")
operacao = str(input("Digite a operação:"))
num1 = float(input("Digite o primeiro número: "))
num2 = float(input("Digite o segundo número: "))




if operacao == '+':
     print(num1 + num2)
if operacao == '-':
    print(num1 - num2)
if operacao  == '/':
    print(num1 / num2)
if operacao == '*':
    print(num1 * num2)
