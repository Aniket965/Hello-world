# include<iostream>
using namespace std;

long long factorial(int a); // 'long' for big integer value
long long  fct=1;
int main(){
int n;
cout<<"Enter number for factorial"<<endl;
cin>>n;
factorial(n);
cout<<"Factorial = "<<fct<<endl;

return 0;}

long long factorial(int a)
{if(a>1) 
  {fct=a*factorial(a-1);
    return fct;}
 else
    return 1; 
   }
