/* prints pattern 
****
***1
**12
*123
1234
*/
#include <stdio.h>
#include <stdlib.h>
int main()
{
    int i,j,k,n;
    puts("please enter number of lines");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        k=n-i;
        for(j=1;j<=k;j++)
        {
            printf("*");
        }
        for(j=1;j<i;j++)
        {
            printf("%d",j);
        }
        printf("\n");
    }
    return 0;
}
